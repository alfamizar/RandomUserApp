<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:RandomUserApp.Presentation.UX.UI.Pages"
            x:Class="RandomUserApp.Presentation.UX.UI.Pages.MainPage"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            NavigationPage.HasNavigationBar="False">
    
    
    <TabbedPage.Children>
        <local:UsersPage 
            Title="Female"
            IconImageSource="{OnPlatform iOS=female_icon.svg, Android=female_icon, UWP=female_icon_uwp.png}"/>
        <local:UserDetailPage 
            Title="Random"
            IconImageSource="{OnPlatform iOS=dice_icon.svg, Android=dice_icon, UWP=dice_icon_uwp.png}"/>
        <local:UsersPage 
            Title="Male"
            IconImageSource="{OnPlatform iOS=male_icon.svg, Android=male_icon, UWP=male_icon_uwp.png}"/>
    </TabbedPage.Children>
    
</TabbedPage>
